{
    "name": "zodyac/behat-failure-screenshot-extension",
    "type": "behat-extension",
    "description": "Behat extension to enable failure screenshots",
    "keywords": ["bdd", "behat", "screenshot"],
    "homepage": "http://jadu.github.io",
    "license": "NCSA",
    "authors": [
        {
            "name": "Tom Graham",
            "email": "tom.graham@jadu.co.uk"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "behat/behat": "~2.4.6",
        "behat/mink": "~1.5.0",
        "behat/mink-extension": "~1.1.4",
        "behat/mink-selenium2-driver": "~1.1.1"
    },
    "suggest": {
        "zodyac/behat-extensible-html-formatter": "Allows the failure screenshots to be displayed in the HTML formatter output."
    },
    "autoload": {
        "psr-0": { "Zodyac\\Behat\\FailureScreenshotExtension": "src/" }
    }
}
